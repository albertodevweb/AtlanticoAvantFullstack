<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mercado Livre Fictício</title>

  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .produto {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 15px;
      border-radius: 8px;
    }
  </style>
</head>
<body>


  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Mercado Livre Fictício</a>
  </nav>

  <div class="container my-5">
    <div class="row">

      <% produtos.forEach(produto => { %>
        <div class="col-md-4 mb-4">
          <div class="produto bg-light">
            <h5 class="card-title"><%= produto.nome %></h5>
            <p class="card-text">Preço: R$ <%= produto.preco.toFixed(2) %></p>
            <p class="card-text">Categoria: <%= produto.categoria %></p>
            <p class="card-text"><strong>Descrição:</strong> <%= produto.descricao %></p>
            <p class="card-text"><strong>Estoque:</strong> <%= produto.estoque %> unidades disponíveis</p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>


  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
